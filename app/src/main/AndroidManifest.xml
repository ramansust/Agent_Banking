<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.datasoft.abs">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AgentBanking">
        <activity
            android:name=".presenter.view.splash.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AgentBanking.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presenter.view.login.LoginActivity"
            android:label="@string/activity_login"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AgentBanking.NoActionBar" />

        <activity
            android:name=".presenter.view.dashboard.MainActivity"
            android:label="@string/activity_main"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AgentBanking.NoActionBar" />

    </application>

</manifest>